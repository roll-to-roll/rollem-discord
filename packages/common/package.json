{
  "name": "@rollem/common",
  "version": "2.7.0",
  "description": "Rollem (Common) - Shared package for Rollem deployables",
  "author": "David <npm@davidsharer.com>",
  "homepage": "https://github.com/rollem-discord/rollem-discord",
  "bugs": {
    "url": "https://github.com/rollem-discord/rollem-discord/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "____________________note01____________________": "all commands prefixed with `:` need review // TODO: Review",
    "____________________note02____________________": "all non-pinned commands should be prefixed with `::<scope>:` to avoid cross-workspace build actions",
    "____________________note03a____________________": "build = fresh-build",
    "____________________note03b____________________": "watch = fresh-build -> watch",
    "____________________note03c____________________": "dev = fresh-build -> watch -> live-update",
    "____________________note03d____________________": "start = only start",
    "____________________note04e____________________": "package = fresh build + package",
    "__________________________________________________": "end of notes",
    "____________________pinned____________________": "common commands",
    "build": "yarn run ::common:build",
    "____________________build____________________": "build-related commands",
    "::common:clean": "node tools/cleanup",
    "::common:build": "yarn run ::common:build:cjs && yarn run ::common:build:esm && yarn run ::common:build:umd && yarn run ::common:build:types",
    "::common:build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "::common:build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "::common:build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "::common:build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "____________________local-run____________________": "commands related to local run",
    "____________________local-docker-packaging____________________": "commands for running within the docker package",
    "____________________for-docker____________________": "commands for running within the docker package",
    "____________________unreviewed____________________": "// TODO: Review",
    ":typeorm": "nodemon -r dotenv/config -r ts-node/register ./node_modules/typeorm/cli.js",
    ":package": "yarn run build && yarn pack",
    ":test": "echo 'TODO: Mocha is broken with yarn berry?' || mocha -r dotenv/config -r ts-node/register -r tsconfig-paths/register src/**/*.spec.ts dotenv_config_path=../../secrets/vscode.env",
    ":old:test:cov": "jest --coverage --no-cache --runInBand",
    ":addscope": "node tools/packagejson name @tomchen/example-typescript-package"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "spec": "src/**/*.spec.ts",
    "extension": [
      "ts"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@language-v1": "rollem-dist/rollem-language-1/",
    "@language-v2": "rollem-dist/rollem-language-2/",
    "@bot": "rollem-dist/rollem-bot",
    "@storage": "rollem-dist/storage/"
  },
  "dependencies": {"applicationinsights": "^2.9.1",
    "chai": "^3.5.0",
    "chance": "^1.1.5",
    "del": "^3.0.0",
    "dotenv": "^9.0.1",
    "dotenv-cli": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-ext-replace": "^0.3.0",
    "gulp-pegjs": "^0.2.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.0-alpha.3",
    "gulp-watch": "^4.3.11",
    "injection-js": "^2.2.1",
    "lodash": "^4.17.21",
    "mocha": "^8.4.0",
    "module-alias": "^2.2.0",
    "moment": "^2.22.1",
    "node-cache": "^5.1.0",
    "npm": "^6.3.0",
    "nyc": "^15.0.1",
    "pegjs": "0.10.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.1.0",
    "ts-pegjs": "^0.3.1",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.3.17",
    "typescript": "^5.3.3",
    "watchify": "^3.9.0",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "ts-loader": "^9.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.7.2"
  },
  "gitHead": "b36c5f893eec7c328f6d00170c24774db3ee6878",
  "packageManager": "yarn@4.0.2"
}
