{
  "name": "@rollem/bot",
  "version": "2.9.6",
  "description": "Rollem (Discord Bot) - Bot Deployable",
  "author": "David <npm@davidsharer.com>",
  "homepage": "https://github.com/rollem-discord/rollem-discord",
  "bugs": {
    "url": "https://github.com/rollem-discord/rollem-discord/issues"
  },
  "scripts": {
    "____________________note01____________________": "all commands prefixed with `:` need review // TODO: Review",
    "____________________note02____________________": "all non-pinned commands should be prefixed with `::<scope>:` to avoid cross-workspace build actions",
    "____________________note03a____________________": "build = fresh-build",
    "____________________note03b____________________": "watch = fresh-build -> watch",
    "____________________note03c____________________": "dev = fresh-build -> watch -> live-update",
    "____________________note03d____________________": "start = only start",
    "____________________note04e____________________": "package = fresh build + package",
    "__________________________________________________": "end of notes",
    "____________________pinned____________________": "common commands",
    "build": "yarn run ::bot:clean && yarn run ::bot:build",
    "watch": "yarn ::bot:watch",
    "dev": "yarn run ::bot:watch",
    "start": "yarn run ::bot:start",
    "package": "yarn run ::bot:build && yarn run ::bot:package",
    "package:only": "yarn run ::bot:package",
    "package:start": "yarn run ::bot:package:start",
    "package:cleanup": "yarn run ::bot:package:cleanup",
    "____________________build____________________": "build-related commands",
    "::bot:clean": "rm -rf ./dist",
    "::bot:build": "cross-env NODE_ENV=development webpack",
    "::bot:watch": "cross-env NODE_ENV=development webpack --watch",
    "____________________local-run____________________": "commands related to local run",
    "::bot:start": "yarn run webpack:launch",
    "webpack:launch": "cross-env NODE_ENV=development yarn dlx nodemon -r dotenv/config dist/bundle.js dotenv_config_path=../../secrets/vscode.env",
    "____________________local-docker-packaging____________________": "commands for running within the docker package",
    "::bot:package:cleanup": "docker rmi $(docker images --filter=label=org.opencontainers.image.ref.name=rollem/bot -aq)",
    "::bot:package": "docker build --label='rollem-bot' -t rollem-bot .",
    "::bot:package:start": "docker run --rm -it --env-file ../../secrets/vscode.env rollem-bot",
    "____________________for-docker____________________": "commands for running within the docker package",
    "container:start": "node dist/bundle.js",
    "____________________unreviewed____________________": "// TODO: Review",
    ":test": "mocha -r ts-node/register -r tsconfig-paths/register src/**/*.spec.ts",
    ":typeorm": "nodemon -r dotenv/config -r ts-node/register ./node_modules/typeorm/cli.js",
    ":package:start:fake": "node -r dotenv/config dist/bundle.js dotenv_config_path=../../secrets/vscode.env",
    ":old:terraform": ".\\infra\\terraform\\scripts\\xxx-bash-docker-windows-proxy.sh run -it -v `pwd`infra/terraform/clusters:/app/ -w /app/ hashicorp/terraform:light",
    ":old:start": "node -r dotenv/config ./rollem-dist/rollem-bot/bot.js dotenv_config_path=./secrets/vscode.env",
    ":old:start-for-dockerfile": "node rollem-dist/rollem-bot/bot.js",
    ":old:update-k8s-credentials": "doctl kubernetes cluster kubeconfig save rollem-115-sfo2",
    ":old:replace-rollem-beta": "kubectl replace -f ../infra/k8s/rollem-beta/",
    ":old:replace-rollem-prod": "kubectl replace -f ../infra/k8s/rollem-prod/",
    ":old:delete-evicted-pods": "kubectl get pods | grep Evicted | awk '{print $1}' | xargs kubectl delete pod",
    ":old:forward-grafana": "/bin/bash \\<\\<\\< 'kubectl port-forward $(kubectl get  pods --selector=app=grafana --output=jsonpath=\"{.items..metadata.name}\") 3000'",
    ":old:start-sharder": "node -r dotenv/config ./rollem-dist/rollem-bot/sharder.js dotenv_config_path=./secrets/vscode.env",
    ":old:start-package": "docker run --env-file ./secrets/vscode.env rollem-discord",
    ":old:build": "gulp build",
    ":old:watch": "gulp watch"
  },
  "files": [
    "./"
  ],
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "spec": "src/**/*.spec.ts",
    "extension": [
      "ts"
    ]
  },
  "dependencies": {
    "@rollem/common": "workspace:*",
    "@rollem/language": "workspace:*",
    "@types/chai": "^4.2.11",
