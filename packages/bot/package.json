    "injection-js": "^2.2.1",
    "lodash": "^4.17.15",
    "mocha": "^3.2.0",
    "module-alias": "^2.2.0",
    "moment": "^2.22.1",
    "node-cache": "^5.1.0",
    "node-fetch": "^3.0.0",
    "npm": "^6.3.0",
    "nyc": "^15.0.1",
    "pegjs": "0.10.0",
