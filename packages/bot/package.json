    "ts-mocha": "^7.0.0",
    "ts-node": "^10.1.0",
    "ts-pegjs": "^0.2.6",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typeorm": "^0.3.17",
    "typescript": "^5.3.3",
    "watchify": "^3.9.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.7.2",
    "webpack-filter-warnings-plugin": "^1.2.1",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin-next": "^2.2.2"
  },
